<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayou_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/topcolor" />

        <RelativeLayout
            android:id="@+id/rl_main_topbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/topcolor"
                android:gravity="center"
                android:textColor="@color/huise2"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/iv_hy"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/img_hy"
                android:visibility="visible"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="13dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:id="@+id/view_main_top"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_xian" />
    <fragment
        android:id="@+id/frg_01"
        android:name="com.lcsd.dongzhi.fragment.Fragment1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment1" />

    <fragment
        android:id="@+id/frg_02"
        android:name="com.lcsd.dongzhi.fragment.Fragment2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment2" />

    <fragment
       android:id="@+id/frg_03"
        android:name="com.lcsd.dongzhi.fragment.Fragment3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment3" />

    <fragment
        android:id="@+id/frg_04"
        android:name="com.lcsd.dongzhi.fragment.Fragment4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment4" />
    <fragment
        android:id="@+id/frg_05"
        android:name="com.lcsd.dongzhi.fragment.Fragment5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment5" />
        <View
            android:id="@+id/view_main_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_xian" />

        <LinearLayout
            android:id="@+id/ll_main_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="6dp"
                    android:id="@+id/iv_02"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="直播"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/red" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="6dp"
                    android:id="@+id/iv_01"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <View
                    android:layout_width="18dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="新闻"
                    android:layout_marginBottom="3dp"
                    android:textColor="#7a7e83" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="6dp"
                    android:id="@+id/iv_03"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    />
                <View
                    android:layout_width="18dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="服务"
                    android:layout_marginBottom="3dp"
                    android:textColor="#7a7e83" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="6dp"
                    android:id="@+id/iv_04"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    />
                <View
                    android:layout_width="18dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="点播"
                    android:layout_marginBottom="3dp"
                    android:textColor="#7a7e83" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="6dp"
                    android:id="@+id/iv_05"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <View
                    android:layout_width="18dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/tv_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍客"
                    android:textSize="10sp"
                    android:textColor="#7a7e83" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>