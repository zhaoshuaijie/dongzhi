<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_news"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_news_photo"
            android:layout_width="113dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_news_info"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iv_news_photo"
            android:textColor="@color/black"
            android:layout_marginRight="3dp"
            android:lineSpacingExtra="3dp"
            android:textSize="17sp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!--新闻里的布局-->
        <TextView
            android:id="@+id/tv_news_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:layout_alignBottom="@+id/iv_news_photo"
            android:layout_alignLeft="@+id/tv_news_info"
            android:layout_alignStart="@+id/tv_news_info" />

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:drawablePadding="5dp"
            android:textColor="@color/gray"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/tv_news_zuoze"
            android:layout_toRightOf="@+id/tv_news_scanner"
            android:layout_toEndOf="@+id/tv_news_scanner"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tv_news_zuoze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_alignBottom="@+id/iv_news_photo"
            android:layout_toRightOf="@+id/tv_news_time"
            android:layout_toEndOf="@+id/tv_news_time" />
    </RelativeLayout>

</LinearLayout>