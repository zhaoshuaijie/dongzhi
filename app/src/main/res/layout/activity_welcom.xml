<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lcsd.dongzhi.activity.WelcomActivity">

    <ImageView
        android:id="@+id/iv_wel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/img_wel"/>
    <com.lcsd.dongzhi.view.MyVideoView
        android:id="@+id/wel_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    <TextView
        android:id="@+id/wel_tv"
        android:layout_width="48dp"
        android:layout_height="27dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/tv_shape"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:layout_below="@+id/wel_video"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>